@using HtmlHelpers.BeginCollectionItemCore
@using Web.Site.Areas

@model IEnumerable<ArticuloStock>
@{
    int i = 0;
}

<div class="ibox">
    <div class="ibox-title">
        <h5>Top 5 Articulos con bajo stock</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Categoria</th>
                    <th>Stock Actual</th>
                    <th>Stock Minimo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {

                    @foreach (var item in Model)
                    {
                        i = i + 1;
                        <tr>
                            <td>@i</td>
                            <td>@item.Articulo.CodigoArticulo</td>
                            <td>@item.Articulo.Nombre</td>
                            <td>@item.Articulo.Descripcion</td>
                            <td>@item.Articulo.ArticuloCategoria.Descripcion</td>
                            @if (item.StockTotal < item.StockMinimo)
                            {
                                <td class="text-danger">@item.StockTotal Unidades</td>
                            }
                            else
                            {
                                <td>@item.StockTotal Unidades</td>
                            }
                            <td>@item.StockMinimo Unidades</td>
                        </tr>
                    }
                }
                else
                {

                    <tr class="my-4">
                        <td colspan="6" class="text-center text-monospace"><i class="fa fa-folder-open"></i> Sin datos</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

