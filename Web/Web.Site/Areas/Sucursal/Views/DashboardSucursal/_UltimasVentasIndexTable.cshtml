@using HtmlHelpers.BeginCollectionItemCore
@using Web.Site.Areas
@model IEnumerable<Venta>
@{
    int i = 0;
}

<div class="ibox ">
    <div class="ibox-title">
        <h5>Ultimas 5 Ventas</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <h2 class="d-none d-print-block">Ultimas 5 ventas</h2>
    <div class="ibox-content">
        <div class="table">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>#Venta</th>
                        <th>Cliente</th>
                        <th>Tipo de Venta</th>
                        <th>Cantidad de articulos</th>
                        <th>Precio Total</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {

                        @foreach (var item in Model)
                        {
                            i = i + 1;
                            <tr>
                                <td>@i</td>
                                <td>@item.Id</td>
                                <td>@item.Cliente.Nombre</td>
                                <td>@item.VentaTipo</td>
                                <td>@item.VentaDetalles.Count()</td>
                                <td>$ @item.MontoTotal</td>
                                <td>@(item.FechaModificacion != null ? item.FechaModificacion : item.FechaCreacion)</td>
                            </tr>
                        }
                    }
                    else
                    {

                        <tr class="my-4">
                            <td colspan="7" class="text-center text-monospace"><i class="fa fa-folder-open"></i> Sin datos</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>