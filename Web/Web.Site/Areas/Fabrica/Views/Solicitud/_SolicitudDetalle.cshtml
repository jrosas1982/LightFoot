@using HtmlHelpers.BeginCollectionItemCore
@using Web.Site.Areas
@model SolicitudDetalle
@{
    bool esEditar = (Model.Id != 0);
    string idTr = esEditar ? Model.Id + "List" : "";
}
<tr id="@idTr">
    @using (Html.BeginCollectionItem("SolicitudDetalles"))
    {
        {
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.Articulo.Nombre)
            @Html.HiddenFor(x => x.Articulo.Color)
            @Html.HiddenFor(x => x.Articulo.TalleArticulo)
            @Html.HiddenFor(x => x.Motivo)
            <td>@Html.DisplayFor(x => x.Articulo.Nombre)</td>
            <td>@Html.DisplayFor(x => x.Articulo.Color)</td>
            <td>@Html.DisplayFor(x => x.Articulo.TalleArticulo)</td>
            <td>@Html.DisplayFor(x => x.CantidadSolicitada)</td>
            <td>@Html.DisplayFor(x => x.Motivo)</td>
            <td>
                @if (!esEditar)
                {
                    <button class=" btn btn-outline btn-danger  btn-xs " type="button" onclick="removeRow(this)">Borrar</button>
                }
                else
                {
                    <button class=" btn btn-outline btn-primary  btn-xs " type="button" onclick="">Borrar</button>
                    @*<button class=" btn btn-outline btn-danger  btn-xs " type="button" onclick="DeletePriceListProduct('@Html.DisplayTextFor(x => x.Id)')">Borrar</button>*@
                }
            </td>
        }
    }
</tr>