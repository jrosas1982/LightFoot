@{
    ViewData["Title"] = "Solicitudes";
    Layout = "_Layout";

    IEnumerable<Sucursal> Sucursales = ViewBag.Sucursales;
    IEnumerable<EstadoSolicitud> EstadosSolicitud = ViewBag.EstadosSolicitud;
    DateTime FechaDesde = ViewBag.FechaDesde; //DateTime.Today - TimeSpan.FromDays(-30);
    DateTime FechaHasta = ViewBag.FechaHasta; //DateTime.Today;
}

@model IEnumerable<Solicitud>

<div class="row wrapper border-bottom white-bg page-heading navegacion">
    <div class="col-lg-6">
        <h2>Solicitudes</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard", new { area = "fabrica" })">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Fabrica</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Solicitudes</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-12 d-print-none" style="text-align:right">
        <button type="button" class="btn btn-w-m btn-default" onclick="Reporte()">Reporte</button>
        <button type="button" class="btn btn-w-m btn-default" onclick="location.href='@Url.Action("CrearEditarSolicitud", "Solicitud", 0)'">Generar Solicitud Manualmente</button>
    </div>
</div>


<div class="d-none d-print-block w-100">
    <div class="alert alert-default" role="alert">
        Reporte de Solicitudes @DateTime.Now
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">

    <div class="ibox-content m-b-sm border-bottom d-print-none">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="col-form-label" for="solicitud_sucursal">Sucursal</label>
                    <select id="solicitud_sucursal" data-placeholder="Sucursal" class="chosen-select" multiple tabindex="3">
                        @foreach (var sucursal in Sucursales)
                        {
                            <option value="@sucursal.Id"> @sucursal.Nombre </option>
                        }
                    </select>
                </div>
            </div>
            @*<div class="col-sm-3">
                    <div class="form-group">
                        <label class="col-form-labe" for="articulo_name">Articulo</label>
                        <input type="text" id="articulo_name" name="articulo_name" value="" placeholder="Articulo" class="form-control">
                    </div>
                </div>*@
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="col-form-label" for="solicitud_estado">Estado</label>
                    <select id="solicitud_estado" data-placeholder="Estado de solicitud" class="chosen-select" multiple tabindex="3">
                        @foreach (var estado in EstadosSolicitud)
                        {
                            <option value="@((int)estado)"> @estado.GetDisplayName() </option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group" id="fechaRango">
                    <label class="col-form-label" for="fecha">Fecha</label>
                    <div class="input-daterange input-group" id="datepicker">
                        <input id="fechaDesde" type="text" class="form-control-sm form-control" name="start" value="@FechaDesde.ToString("dd/MM/yyyy")" />
                        <span class="input-group-addon"> <i class="fa fa-long-arrow-right mx-1"></i> </span>
                        <input id="fechaHasta" type="text" class="form-control-sm form-control" name="end" value="@FechaHasta.ToString("dd/MM/yyyy")" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 d-flex align-items-end justify-content-end">
                <button class="btn btn-outline-info btn-xl float-right" type="button" onclick="Filtrar()">
                    <i class="fa fa-search" aria-hidden="true"></i> Buscar
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Solicitudes</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="footable table table-stripped table-bordered toggle-arrow-tiny" data-page-size="15">
                            <thead>
                                <tr>

                                    <th data-toggle="true">Sucursal</th>
                                    <th data-hide="all" data-animation="true" class="d-print-none"></th>
                                    <th>Articulos</th>
                                    <th>Comentario</th>
                                    <th>Estado</th>
                                    <th>Fecha</th>
                                    <th data-sort-ignore="true" class="d-print-none">Acciones</th>

                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null)
                                {
                                    foreach (var solicitud in Model)
                                    {
                                        <tr>
                                            <td>@solicitud.Sucursal.Nombre</td>
                                            <td class="d-print-none">
                                                @if (solicitud.SolicitudDetalles != null && solicitud.SolicitudDetalles.Any())
                                                {
                                                    <div class="d-print-none">
                                                        <div class="col">
                                                            <div class="table-responsive">
                                                                <table class="table table-striped table-hover table-bordered">
                                                                    <thead>
                                                                        <tr>
                                                                            <th style="background-color: #9ac5ca82;">Articulo</th>
                                                                            <th style="background-color: #9ac5ca82;">Color</th>
                                                                            <th style="background-color: #9ac5ca82;">Talle</th>
                                                                            <th style="background-color: #9ac5ca82;">Descripcion</th>
                                                                            <th style="background-color: #9ac5ca82;">Cantidad Solicitada</th>
                                                                            <th style="background-color: #9ac5ca82;">Motivo</th>
                                                                            <th style="background-color: #9ac5ca82;" data-sort-ignore="true">Ordenes de Produccion Asociadas</th>

                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var detalle in solicitud.SolicitudDetalles)
                                                                        {
                                                                            <tr>
                                                                                <td>@detalle.Articulo.Nombre</td>
                                                                                <td>@detalle.Articulo.Color</td>
                                                                                <td>@detalle.Articulo.TalleArticulo</td>
                                                                                <td>@detalle.Articulo.Descripcion</td>
                                                                                <td>@detalle.CantidadSolicitada</td>
                                                                                <td>@detalle.Motivo</td>
                                                                                <td>
                                                                                    @foreach (var op in detalle.OrdenesProduccion)
                                                                                    {
                                                                                        <button class="btn btn-outline btn-@op.EstadoOrdenProduccion.GetGroupName()  btn-xs" type="button" onclick="VerOrdenAsociada('@op.Id')">Orden @op.Id</button>
                                                                                    }
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>

                                                }
                                            </td>
                                            <td>@solicitud.SolicitudDetalles.Count()</td>
                                            <td>@solicitud.Comentario</td>
                                            <td>
                                                <span class="label label-@solicitud.EstadoSolicitud.GetGroupName()">@solicitud.EstadoSolicitud.GetDisplayName()</span>
                                            </td>
                                            <td>@solicitud.FechaCreacion.ToLocalTime()</td>
                                            <td class="d-print-none">
                                                <button class="btn btn-outline btn-success btn-xs" type="button" onclick="VerDetalles('@solicitud.Id')">Ver Detalles</button>

                                                @if (solicitud.EstadoSolicitud == EstadoSolicitud.PendienteAprobacion)
                                                {
                                                    <button class="btn btn-outline btn-danger btn-xs" type="button" onclick="RechazarSolicitud('@solicitud.Id')">Rechazar</button>
                                                    <button class="btn btn-outline btn-primary btn-xs" type="button" onclick="AprobarSolicitud('@solicitud.Id')">Aprobar</button>
                                                }
                                                @*else if (solicitud.EstadoSolicitud == EstadoSolicitud.Aprobada)
                                                    {
                                                        <button class="btn btn-outline btn-success  btn-xs" type="button" onclick="VerOrdenesAsociadas('@solicitud.Id')">Ver Ordenes asociadas</button>
                                                    }*@

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="12">
                                        <ul class="pagination float-right"></ul>
                                    </td>
                                </tr>
                            </tfoot>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/footable/css/footable.core.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css" />
    <link rel="stylesheet" href="~/lib/chosen/bootstrap-chosen.css" />
}

@section Scripts {
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/footable/dist/footable.all.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/chosen/chosen.jquery.js"></script>

    <script type="text/javascript">
        $('#fechaRango .input-daterange').datepicker({
            keyboardNavigation: false,
            forceParse: false,
            autoclose: true,
            endDate: "today",
            language: "es",
            format: "dd/mm/yyyy",
            startDate: "12/12/2020"
        });
    </script>

    <script type="text/javascript">
        $('.chosen-select').chosen({
            no_results_text: "No hay resultados que coincidan con "
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.footable').footable();
        });
    </script>


    <script type="text/javascript">
        function RechazarSolicitud(Id) {
            alert(Id);
        }

        function AprobarSolicitud(Id) {
            window.location = '/fabrica/Solicitud/AprobarSolicitud?idSolicitud=' + Id;
        }

        function VerOrdenesAsociadas(Id) {
            window.location = '/fabrica/Solicitud/AprobarSolicitud?idSolicitud=' + Id;
        }

        function VerDetalles(Id) {
            window.location = '/fabrica/Solicitud/SolicitudDetalle?IdSolicitud=' + Id;
        }

        function Reporte() {
            $('.dataTables_filter').addClass("d-print-none")
            window.print();
            $('.dataTables_filter').removeClass("d-print-none")
        }

        function Filtrar() {
            sucursalesSeleccionadas = $("#solicitud_sucursal").chosen().val();
            estadosSeleccionados = $("#solicitud_estado").chosen().val();
            fechaDesde = $("#fechaDesde").val();
            fechaHasta = $("#fechaHasta").val();

            $.ajax({
                type: "post",
                url: "/fabrica/Solicitud/Filtrar",
                data: {
                    solicitudFilter: {
                        IdSucursalList: sucursalesSeleccionadas,
                        EstadoSolicitudList: estadosSeleccionados,
                        FechaDesde: fechaDesde,
                        FechaHasta: fechaHasta
                    }
                },
                success: function (result) {
                    if (result == true) {
                        Model.Solicitudes = result;
                    } else {
                        swal("Error", "Ocurrió un error inesperado", "error");
                    }
                }
            });
        }

        function alert(Id) {
            swal({
                title: "Seguro que desea rechazar la solicitud?",
                text: "La Solicitud será rechazada definitivamente. Esta accion no se puede deshacer",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Si, rechazar!",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "post",
                    url: "/fabrica/Solicitud/Rechazar",
                    data: { idSolicitud: Id },
                    success: function (result) {
                        if (result == true) {
                            swal("Exito!", "La solicitud ha sido rechazada correctamente", "success");
                        } else {
                            swal("Error", "Ocurrió un error inesperado", "error");
                        }
                    }
                }).done(function () {
                    window.setTimeout(function () {
                        location.reload();
                    }, 600);
                });
            });
        };
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });
        });
    </script>

}