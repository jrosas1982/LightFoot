@{
    ViewData["Title"] = "Compras de Insumo";
    Layout = "_Layout";


}

@using Web.Site.Areas.Fabrica.Models
@model CompraInsumoModel

<div class="row wrapper border-bottom white-bg page-heading navegacion">
    <div class="col-lg-10">
        <h2>Compras</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard", new { area = "fabrica" })">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Fabrica</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "CompraInsumo", 0)">Compras</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Comprar Insumos</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2 mt-1 mt-sm-2 d-flex justify-content-end align-items-end" style="text-align:right">
        <button type="button" class="btn btn-default btn-rounded w-100"
                onclick="location.href='@Url.Action("Index", "CompraInsumo", 0)'">
            <span class="icon icon-xs"><span class="fas fa-chevron-left mr-2"></span></span>Volver
        </button>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight ecommerce">

    @using (Html.BeginForm("Crear", "CompraInsumo", FormMethod.Post))
    {
        <div class="wrapper wrapper-content animated fadeInRight ecommerce">
            <div class="ibox-content m-b-sm border-bottom">
                <table id="ListaDetalleCompra" class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Insumo</th>
                        <th>Proveedor</th>
                        <th>Cantidad</th>
                        <th>Monto</th>
                        <th>Acciones</th>
                    </tr>
                    <tbody>
                        @if (Model.CompraInsumoDetalles != null)
                        {
                            @foreach (var detalles in Model.CompraInsumoDetalles)
                            {
                                if (detalles != null)
                                {
                                    @await Html.PartialAsync("_CompraInsumoDetalle", detalles)
                                }
                            }
                        }
                    </tbody>
                </table>
                <div class="ibox-content border-0 pt-0 pr-0">
                    <div class="text-center d-flex justify-content-end">
                        <button type="button" class="btn btn-outline btn-default btn-lg mr-1" data-toggle="modal" data-target="#NewCommentModal">
                            Agregar Insumo
                        </button>
                        <button type="Submit" class="btn btn-primary btn-lg" id="agregarInsumo">
                            Comprar
                        </button>

                    </div>

                </div>
            </div>
        </div>
    }
    @* MODAL NEW COMMENT *@
    <div class="modal inmodal fade" id="NewCommentModal" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header pb-1">
                    <div class="row">
                        <div class="col-sm-12 d-flex justify-content-center">
                            <h1 style="font-size:30px;">Nuevo Articulo</h1>
                        </div>
                    </div>
                </div>
                <div class="modal-body py-2">
                    <div class="form-floating">
                        @Html.LabelFor(m => m.CompraInsumoDetalle.Insumo)
                        @Html.DropDownListFor(m => m.CompraInsumoDetalle.Insumo, new List<SelectListItem>(Model.Insumos), " -- Seleccionar Insumo -- ", new { @id = "dropdownInsumo", @class = "form-control" })
                    </div>
                </div>
                <div class="modal-body py-2">
                    <div class="form-floating">
                        @Html.LabelFor(m => m.CompraInsumoDetalle.Proveedor)
                        @Html.DropDownListFor(m => m.CompraInsumoDetalle.Proveedor, new List<SelectListItem>(Model.Proveedores), " -- Seleccionar Proveedor -- ", new { @id = "dropdownProveedor", @class = "form-control" })
                    </div>
                </div>

                <div class="modal-body py-2">
                    <div class="form-floating">
                        @Html.LabelFor(m => m.CompraInsumoDetalle.Cantidad)
                        @Html.EditorFor(model => model.CompraInsumoDetalle.Cantidad, new { htmlAttributes = new { @id = "InsumoCantidad", @class = "form-control", @placeholder = "" } })
                        @Html.ValidationMessageFor(model => model.CompraInsumoDetalle.Cantidad, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*<div class="modal-body py-2">
                    <div class="form-floating">
                        @Html.LabelFor(m => m.CompraInsumoDetalle.Monto)
                        @Html.EditorFor(model => model.CompraInsumoDetalle.Monto, new { htmlAttributes = new { @id = "Monto", @class = "form-control", @placeholder = "" } })
                        @Html.ValidationMessageFor(model => model.CompraInsumoDetalle.Monto, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                    <button type="button" onclick="addArticulo()" class="btn btn-primary" data-dismiss="modal">Agregar Articulo</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    <environment names="Development,Staging,Production">

    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    </environment>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#dropdownInsumoXX').change(function () {
                $.ajax({
                    type: "post",
                    url: "/fabrica/comprainsumo/TallesPorArticulo",
                    data: { NombreArticulo: $("#dropdownArticulos").val() },
                    datatype: "json",
                    traditional: true,
                    success: function (data) {
                        var talleArticulo = "<select id='newTalless'>";
                        talleArticulo = talleArticulo + '<option value="">--Seleccioné--</option>';
                        for (var i = 0; i < data.length; i++) {
                            talleArticulo = talleArticulo + '<option value=' + data[i].value + '>' + data[i].text + '</option>';
                        }
                        talleArticulo = talleArticulo + '</select>';
                        $('#newTalless').html(talleArticulo);
                    }
                });
            });

            // 
            // Lo ideal es que se muestre el monto segun lo ingresado, cunado se agrega la cantidad de un insumo y se define el proveedor
            // se mostraria un campo con el precio que tendria esa compra de insumo (campo no modificable por el usuario - disable)
            // con ajax 

            $('#dropdownProveedorXX').change(function () {
                $.ajax({
                    type: "post",
                    url: "/fabrica/comprainsumo/TallesPorArticulo",
                    data: { NombreArticulo: $("#dropdownArticulos").val() },
                    datatype: "json",
                    traditional: true,
                    success: function (data) {
                        var talleArticulo = "<select id='newTalless'>";
                        talleArticulo = talleArticulo + '<option value="">--Seleccioné--</option>';
                        for (var i = 0; i < data.length; i++) {
                            talleArticulo = talleArticulo + '<option value=' + data[i].value + '>' + data[i].text + '</option>';
                        }
                        talleArticulo = talleArticulo + '</select>';
                        $('#newTalless').html(talleArticulo);
                    }
                });
            }); 

           
        });

        function ClearModal() {
            $("#dropdownInsumo").val("");
            $("#dropdownProveedor").val("");
            $("#InsumoCantidad").val("");
            $("#Monto").val("");
        }

        function addArticulo() {
            $.ajax({
                type: "post",
                url: "/fabrica/comprainsumo/agregardetalle",
                data: {
                    IdInsumo: $("#dropdownInsumo").val(),
                    Cantidad: $("#InsumoCantidad").val(),
                    Insumo: {
                        Nombre: $("#dropdownInsumo :selected").text()
                    },
                    Proveedor: {
                        Nombre: $("#dropdownProveedor :selected").text()
                    }
                }
            }).done(function (partialView) {
                $('#ListaDetalleCompra tbody:last-child').after().append(partialView);
                ClearModal();
            });
        }
        function removeRow(row) {
            $(row).parents('tr').first().remove();
        }

    </script>
}

