@using HtmlHelpers.BeginCollectionItemCore
@using Web.Site.Areas

@model IEnumerable<RankingVentasPorUsuarioModel>
@{
    int i = 0;
}

<div class="ibox">
    <div class="ibox-title">
        <h5>Articulos con bajo stock</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <h2 class="d-none d-print-block">Ventas Por Vendedor</h2>
    <div class="ibox-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#Venta</th>
                    <th>Vendedor</th>
                    <th>Cliente</th>
                    <th>Tipo de Venta</th>
                    <th>Monto Total</th>
                    <th>Fecha</th>
                    <th>Pagado</th>
                    <th>Fecha Ultimo Pago</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Usuario.Id</td>

                    </tr>
                    }
                }
                else
                {

                <tr class="my-4">
                    <td colspan="7" class="text-center text-monospace"><i class="fa fa-folder-open"></i> Sin datos</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

