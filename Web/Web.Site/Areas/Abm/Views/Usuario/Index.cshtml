@{
    ViewData["Title"] = "Usuarios";
    Layout = "_Layout";

    //bool esEdicion = (Model.Id != 0);
}

@using Core.Dominio.AggregatesModel

@model IEnumerable<Usuario>

<div class="row wrapper border-bottom white-bg page-heading navegacion">
    <div class="col-lg-12">
        <h2>Usuarios</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Gestion</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Usuarios</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-12" style="text-align:right">
        <button type="button" class="btn btn-w-m btn-default" onclick="Reporte()">Reporte</button>
        <button type="button" class="btn btn-w-m btn-default" onclick="location.href='@Url.Action("CrearEditar", "Usuario", 0)'"> Crear nuevo Usuario</button>
    </div>
</div>

<div class="d-none d-print-block w-100">
    <div class="alert alert-default" role="alert">
        Reporte de Usuarios @DateTime.Now
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Usuarios Light Foot</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Nombre</th>
                                <th>DNI</th>
                                <th>Email</th>
                                <th>Dirección</th>
                                <th>Telefono</th>
                                <th>Rol</th>
                                <th>Activo</th>
                                <th  class="d-print-none">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                            <tr class="gradeC">
                                <td>@item.NombreUsuario</td>
                                <td>@item.Nombre @item.Apellido</td>
                                <td>@item.DNI</td>
                                <td>@item.Email</td>
                                <td>@item.Direccion</td>
                                <td>@item.Telefono</td>
                                <td>@item.UsuarioRol</td>

                                @if (item.Activo)
                                {
                                    <td> Si </td>
                                }
                                else
                                {
                                    <td>No </td>
                                }
                                <td  class="d-print-none">
                                    <button class="btn btn-outline btn-danger  btn-xs" type="button" onclick="BorrarUsuario('@item.Id')">Borrar</button>
                                    <button class="btn btn-outline btn-warning  btn-xs" type="button" onclick="EditarUsuario('@item.Id')">Editar</button>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="d-print-none">
                                <th>Usuario</th>
                                <th>Nombre</th>
                                <th>DNI</th>
                                <th>Email</th>
                                <th>Dirección</th>
                                <th>Telefono</th>
                                <th>Rol</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
        <link rel="stylesheet" href="~/lib/sweetalert/dist/sweetalert.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/dataTables/datatables.min.js"></script>
        <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    </environment>

    <script type="text/javascript">

        function BorrarUsuario(Id) {
            alert(Id);
        }

        function EditarUsuario(Id) {
            window.location = '/abm/Usuario/CrearEditar?IdUsuario=' + Id;
        }

        function Reporte() {
            $('.dataTables_filter').addClass("d-print-none")
            window.print();
            $('.dataTables_filter').removeClass("d-print-none")
        }

        function alert(Id) {
            swal({
                title: "Seguro que desea dar de baja el Usuario?",
                text: "El Usuario será dada de baja definitivamente!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Si, dar de baja!",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "post",
                    url: "/abm/Usuario/Eliminar",
                    data: { Id: Id },
                    success: function (result) {
                        if (result == true) {
                            swal("Baja Exitosa!", "El Usuario ha sido dado de baja correctamente.", "success");
                        } else {
                            swal("Error", "Ocurrió un error intente mas tarde", "error");
                        }
                    }
                }).done(function () {
                    window.setTimeout(function () {
                        location.reload();
                    }, 600);
                });
            });
        };
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    {
                        //extend: 'print',
                        //autoPrint: true,
                        //exportOptions: {
                        //    columns: [0, 1, 2, 5]
                        //}
                        //customize: function (win) {
                        //    $(win.document.body).addClass('white-bg');
                        //    $(win.document.body).css('font-size', '10px');

                        //    $(win.document.body).find('table')
                        //        .addClass('compact')
                        //        .css('font-size', 'inherit');
                        //}
                    }
                ]

            });
        });
    </script>
}