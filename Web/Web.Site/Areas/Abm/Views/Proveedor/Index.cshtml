                                            <td class="d-print-none">
                                                <button class="btn btn-outline btn-danger  btn-xs" type="button" onclick="BorrarProveedor('@item.Id')">Borrar</button>
                                                <button class="btn btn-outline btn-warning  btn-xs" type="button" onclick="EditarProveedor('@item.Id')">Editar</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr class="d-print-none">
                                    <th>CUIT</th>
                                    <th>Nombre</th>
                                    <th>Direccion</th>
                                    <th>Email</th>
                                    <th>Calificacion</th>
                                    <th class="d-print-none">Acciones</th>
                                </tr>
                            </tfoot>
                        </table>*@
                </div>
            </div>
        </div>
    </div>

</div>
@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
        <link rel="stylesheet" href="~/lib/footable/css/footable.core.min.css" />
        <link rel="stylesheet" href="~/lib/sweetalert/dist/sweetalert.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/dataTables/datatables.min.js"></script>
        <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/footable/dist/footable.all.min.js"></script>
        <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.footable').footable();
        });
    </script>

    <script type="text/javascript">

        function BorrarProveedor(Id) {
            alert(Id);
        }

        function EditarProveedor(Id) {
            window.location = '/abm/Proveedor/CrearEditarProveedor?idProveedor=' + Id;
        }

        function AsociarInsumos(Id) {
            window.location = '/abm/Proveedor/AsignarProveedorInsumo?idProveedor=' + Id;
        }

        function AsociarArticulos(Id) {
            window.location = '/abm/Proveedor/AsignarProveedorArticulo?idProveedor=' + Id;
        }

        function Reporte() {

            window.print();
        }

        function alert(Id) {
            swal({
                title: "Seguro que desea dar de baja el Proveedor?",
                text: "El Proveedor será dada de baja definitivamente!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Si, dar de baja!",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "post",
                    url: "/abm/Proveedor/Eliminar",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            swal("Baja Exitosa!", "El Proveedor ha sido dado de baja correctamente.", "success");
                        } else {
                            swal("Error", "Ocurrió un error intente mas tarde", "error");
                        }
                    }
                }).done(function () {
                    window.setTimeout(function () {
                        location.reload();
                    }, 600);
                });
            });
        };

        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: 'gitp'
            });
        });
    </script>
}