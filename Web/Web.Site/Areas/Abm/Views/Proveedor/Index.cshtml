@{
    ViewData["Title"] = "Proveedor";
    Layout = "_Layout";

    //bool esEdicion = (Model.Id != 0);
}

@using Core.Dominio.AggregatesModel
@model IEnumerable<Proveedor>

<div class="row wrapper border-bottom white-bg page-heading navegacion">
    <div class="col-xl-8 col-lg-6">
        <h2>Proveedor</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard", new { area = "fabrica" })">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Gestion</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Proveedor</strong>
            </li>
        </ol>
    </div>


    <div class="col-xl-2 col-lg-3 mt-1 mt-sm-2 d-flex justify-content-end align-items-end p-lg-0" style="text-align:right">
        <div class="dropdown">
            <button class="btn btn-w-m btn-default w-100 dropdown-toggle count-info" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="icon icon-xs"><span class="fas fa-file mr-2"></span></span>Generar Reporte
            </button>
            <div class="dropdown-menu">
                <button class="dropdown-item w-100" type="button" onclick="ReporteSimple()">Reporte Simple</button>
                <button class="dropdown-item w-100" type="button" onclick="ReporteDetallado()">Reporte Detallado</button>
            </div>
        </div>
    </div>

    @*<div class="col-xl-2 col-lg-3 mt-1 mt-sm-2 d-flex justify-content-end align-items-end p-lg-0" style="text-align:right">
        <button type="button" class="btn btn-w-m btn-default w-100" onclick="Reporte()">
            <span class="icon icon-xs"><span class="fas fa-file mr-2"></span></span>Generar Reporte
        </button>
    </div>*@

    <div class="col-xl-2 col-lg-3 mt-1 mt-sm-2 d-flex justify-content-end align-items-end" style="text-align:right">
        <button type="button" class="btn btn-w-m btn-primary w-100"
                onclick="location.href='@Url.Action("CrearEditarProveedor", "Proveedor", 0)'">
            <span class="icon icon-xs"><span class="fas fa-plus mr-2"></span></span>Nuevo Proveedor
        </button>
    </div>
</div>

<div class="d-none d-print-block w-100">
    <div class="alert alert-default" role="alert">
        Reporte de Proveedor @DateTime.Now
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Proveedor</h5>
                </div>
                <div class="ibox-content">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="footable table table-stripped table-bordered toggle-arrow-tiny" data-page-size="15">
                                <thead>
                                    <tr>

                                        <th>Proveedor</th>
                                        <th data-hide="all" data-animation="true"></th>
                                        <th>CUIT</th>
                                        <th>Direccion</th>
                                        <th>Email</th>
                                        <th>Calificacion</th>
                                        <th data-sort-ignore="true" class="d-print-none">Acciones</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null)
                                    {
                                        foreach (var proveedor in Model)
                                        {
                                            <tr>
                                                <td>@proveedor.Nombre</td>
                                                <td>
                                                    @if (proveedor.ProveedorInsumos != null && proveedor.ProveedorInsumos.Any())
                                                    {
                                                        <div class="col">
                                                            <div class="table-responsive">
                                                                <table class="footable table table-striped table-hover table-bordered  toggle-arrow-tiny">
                                                                    <thead>
                                                                        <tr>
                                                                            <th style="background-color: #9ac5ca82;" width="20%">Insumo</th>
                                                                            <th style="background-color: #9ac5ca82;" width="40%">Descripcion</th>
                                                                            <th style="background-color: #9ac5ca82;" width="10%">Precio</th>
                                                                            <th style="background-color: #9ac5ca82;" width="10%" data-sort-ignore="true" class="d-print-none">Acciones</th>
                                                                            @*<th style="background-color: #9ac5ca82;" data-sort-ignore="true">Historico</th>*@

                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var proveedorInsumo in proveedor.ProveedorInsumos)
                                                                        {
                                                                            <tr>
                                                                                <td>@proveedorInsumo.Insumo.Nombre</td>
                                                                                <td>@proveedorInsumo.Insumo.Descripcion</td>
                                                                                <td>@proveedorInsumo.Precio</td>
                                                                                <td class="d-print-none">
                                                                                    <button class="btn btn-outline btn-primary btn-xs" type="button" onclick="ModificarPrecioInsumo('@proveedorInsumo.Id', @proveedorInsumo.Precio)">Modificar Precio</button>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    }

                                                    @if (proveedor.ProveedorArticulos != null && proveedor.ProveedorArticulos.Any())
                                                    {
                                                        <div class="col">
                                                            <div class="table-responsive">
                                                                <table class="footable table table-striped table-hover table-bordered  toggle-arrow-tiny">
                                                                    <thead>
                                                                        <tr>
                                                                            <th style="background-color: #99c98d82;" width="20%">Articulo</th>
                                                                            <th style="background-color: #99c98d82;" width="40%">Descripcion</th>
                                                                            <th style="background-color: #99c98d82;" width="10%">Precio</th>
                                                                            <th style="background-color: #99c98d82;" width="10%" data-sort-ignore="true" class="d-print-none">Acciones</th>
                                                                            @*<th style="background-color: #9ac5ca82;" data-sort-ignore="true">Historico</th>*@

                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var proveedorArticulo in proveedor.ProveedorArticulos)
                                                                        {
                                                                            <tr>
                                                                                <td>@proveedorArticulo.Articulo.Nombre - @proveedorArticulo.Articulo.Color - Talle @proveedorArticulo.Articulo.TalleArticulo</td>
                                                                                <td>@proveedorArticulo.Articulo.Descripcion</td>
                                                                                <td>@proveedorArticulo.Precio</td>
                                                                                <td class="d-print-none">
                                                                                    <button class="btn btn-outline btn-primary btn-xs" type="button" onclick="ModificarPrecioArticulo('@proveedorArticulo.Id', @proveedorArticulo.Precio)">Modificar Precio</button>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>

                                                    }
                                                </td>
                                                <td>@proveedor.CUIT</td>
                                                <td>@proveedor.Direccion</td>
                                                <td>@proveedor.Email</td>
                                                <td>@proveedor.Calificacion</td>
                                                <td class="d-print-none">
                                                    <button class="btn btn-outline btn-danger btn-xs" type="button" onclick="BorrarProveedor('@proveedor.Id')">Borrar</button>
                                                    <button class="btn btn-outline btn-warning btn-xs" type="button" onclick="EditarProveedor('@proveedor.Id')">Editar</button>
                                                    <button class="btn btn-outline btn-primary btn-xs" type="button" onclick="AsociarInsumos('@proveedor.Id')">Asociar Insumos</button>
                                                    <button class="btn btn-outline btn-primary btn-xs" type="button" onclick="AsociarArticulos('@proveedor.Id')">Asociar Articulos</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="6">
                                            <ul class="pagination float-right"></ul>
                                        </td>
                                    </tr>
                                </tfoot>


                            </table>
                        </div>
                    </div>



                    @*<table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>CUIT</th>
                                    <th>Nombre</th>
                                    <th>Direccion</th>
                                    <th>Email</th>
                                    <th>Calificacion</th>
                                    <th class="d-print-none">Acciones</th>
