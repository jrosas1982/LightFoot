@{
    ViewData["Title"] = "Stock Articulos";
    Layout = "_Layout";

    //bool esEdicion = (Model.Id != 0);
}

@using Core.Dominio.AggregatesModel
@model IEnumerable<ArticuloStock>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-xl-10 col-lg-9">
        <h2>Stock Articulos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard", new { area = "fabrica" })">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Gestion</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Stock Articulos</strong>
            </li>
        </ol>
    </div>
    @*<div class="col-xl-2 col-lg-3 mt-1 mt-sm-2 d-flex justify-content-end align-items-end p-lg-0" style="text-align:right">
            <button type="button" class="btn btn-w-m btn-primary" 
                onclick="location.href='@Url.Action("CrearEditarStockArticulo", "ControlStockArticulo", 0 )'">Crear nuevo Stock de Articulos</button>
    </div>*@
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Stock Articulos</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Código Art.</th>
                                <th>Cantidad</th>
                                <th>Punto Reposición</th>
                                <th>Reposición Lote</th>
                                <th>Reposición Automática</th>
                                <th>Tamaño lote</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                            <tr class="gradeC">
                                <td>@item.Articulo.Nombre - @item.Articulo.Color - Talle @item.Articulo.TalleArticulo</td>
                                <td>@item.Articulo.CodigoArticulo</td>
                                <td>@item.StockTotal</td>
                                <td>@item.StockMinimo</td>
                                @if (item.EsReposicionPorLote == true)
                                {
                                    <td>SI</td>
                                }
                                else
                                {
                                    <td>No</td>
                                }
                                @if (item.EsReposicionAutomatica == true)
                                {
                                    <td>SI</td>
                                }
                                else
                                {
                                    <td>No</td>
                                }
                                <td>@item.TamañoLote</td>
                                <td>
                                    @*<button class="btn btn-outline btn-danger  btn-xs" type="button" onclick="BorrarArticulo('@item.Id')">Borrar</button>*@
                                    <button class="btn btn-outline btn-warning  btn-xs" type="button" onclick="EditarStockArticulo('@item.Id')">Editar</button>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Nombre</th>
                                <th>Código Art.</th>
                                <th>Cantidad</th>
                                <th>Punto Reposición</th>
                                <th>Reposición Lote</th>
                                <th>Reposición Automática</th>
                                <th>Tamaño lote</th>
                                <th>Acciones</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
        <link rel="stylesheet" href="~/lib/sweetalert/dist/sweetalert.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/dataTables/datatables.min.js"></script>
        <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    </environment>

    <script type="text/javascript">

        function BorrarArticulo(Id) {
            alert(Id);
        }

        function EditarStockArticulo(Id) {
            window.location = '/abm/ControlStockArticulo/CrearEditarStockArticulo?IdStockArticulo=' + Id;
        }
        function alert(Id) {
            swal({
                title: "Seguro que desea dar de baja el Stock de Articulo?",
                text: "El Stock será dada de baja definitivamente!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Si, dar de baja!",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "post",
                    url: "/ArticuloStock/Eliminar",
                    data: { Id: Id },
                    success: function (result) {
                        if (result == true) {
                            swal("Baja Exitosa!", "El Stock de Articulo ha sido dado de baja correctamente.", "success");
                        } else {
                            swal("Error", "Ocurrió un error intente mas tarde", "error");
                        }
                    }
                }).done(function () {
                    window.setTimeout(function () {
                        location.reload();
                    }, 600);
                });
            });
        };
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: 'gitp',
            });
        });
    </script>
}