@{
    ViewData["Title"] = "Sucursales";
    //bool esEdicion = (Model.Id != 0);
    Layout = "_Layout";

}

@model IEnumerable<Sucursal>

<div class="row wrapper border-bottom white-bg page-heading navegacion">
    <div class="col-lg-12">
        <h2>Sucursales</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Gestion</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Sucursales</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-12" style="text-align:right">
        <button type="button" class="btn btn-w-m btn-default" onclick="Reporte()">Reporte</button>
        <button type="button" class="btn btn-w-m btn-default" onclick="location.href='@Url.Action("CrearEditarSucursal", "Sucursal", 0)'"> Crear nueva sucursal</button>
    </div>
</div>

<div class="d-none d-print-block w-100">
    <div class="alert alert-<" role="alert">
        Reporte de Sucursales @DateTime.Now
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Sucursales Light Foot</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                @*<th>Número de sucursal</th>*@
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Dirección</th>
                                <th>Activo</th>
                                <th class="d-print-none">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="gradeC">
                                        @*<td>@item.Id</td>*@
                                        <td>@item.Nombre</td>
                                        <td>@item.Descripcion</td>
                                        <td>@item.Direccion</td>
                                        @if (item.Activo)
                                        {
                                            <td> Si </td>
                                        }
                                        else
                                        {
                                            <td>No </td>
                                        }
                                        <td class="d-print-none">
                                            <button class="btn btn-outline btn-danger  btn-xs" type="button" onclick="BorrarSucursal('@item.Id')">Borrar</button>
                                            <button class="btn btn-outline btn-warning  btn-xs" type="button" onclick="EditarSucursal('@item.Id')">Editar</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="d-print-none">
                                @*<th>Número de sucursal</th>*@
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Dirección</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Styles {
    <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
}

@section Scripts {
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">

        function BorrarSucursal(Id) {
            alert(Id);
        }

        function EditarSucursal(Id) {
            window.location = '/abm/Sucursal/CrearEditarSucursal?IdSucursal=' + Id;
        }

        function Reporte() {
            $('.dataTables_filter').addClass("d-print-none")
            window.print();
            $('.dataTables_filter').removeClass("d-print-none")
        }

        function alert(Id) {
            swal({
                title: "Seguro que desea dar de baja la Sucursal?",
                text: "La Sucursal será dada de baja definitivamente!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Si, dar de baja!",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "post",
                    url: "/abm/Sucursal/Eliminar",
                    data: { Id: Id },
                    success: function (result) {
                        if (result == true) {
                            swal("Baja Exitosa!", "La Sucursal ha sido dado de baja correctamente.", "success");
                        } else {
                            swal("Error", "Ocurrió un error intente mas tarde", "error");
                        }
                    }
                }).done(function () {
                    window.setTimeout(function () {
                        location.reload();
                    }, 600);
                });
            });
        };
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
