@{
    ViewData["Title"] = "Categorias";
    //bool esEdicion = (Model.Id != 0);
    Layout = "_Layout";

}

@model IEnumerable<ArticuloCategoria>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Categorias</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard", new { area = "fabrica" })">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Gestion</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Categorias</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-12" style="text-align:right">
        <button type="button" class="btn btn-w-m btn-primary" onclick="location.href='@Url.Action("CrearEditarCategoria", "ArticuloCategoria", 0)'"> Crear nueva categoria</button>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Categorias Light Foot</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Descripción</th>
                                <th>Comentario</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="gradeC">
                                        <td>@item.Descripcion</td>
                                        <td>@item.Comentario</td>
                                        @if (item.Activo)
                                        {
                                            <td> Si </td>
                                        }
                                        else
                                        {
                                            <td>No </td>
                                        }
                                        <td>
                                            <button class="btn btn-outline btn-danger  btn-xs" type="button" onclick="BorrarCategoria('@item.Id')">Borrar</button>
                                            <button class="btn btn-outline btn-warning  btn-xs" type="button" onclick="EditarCategoria('@item.Id')">Editar</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Descripción</th>
                                <th>Comentario</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Styles {
    <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
}

@section Scripts {
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">

        function BorrarCategoria(Id) {
            alert(Id);
        }

        function EditarCategoria(Id) {
            window.location = '/abm/ArticuloCategoria/CrearEditarCategoria?IdCategoria=' + Id;
        }
        function alert(Id) {
            swal({
                title: "Seguro que desea dar de baja la Categoria?",
                text: "La Sucursal será dada de baja definitivamente!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Si, dar de baja!",
                cancelButtonText: "Cancelar",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "post",
                    url: "/abm/Categoria/Eliminar",
                    data: { Id: Id },
                    success: function (result) {
                        if (result == true) {
                            swal("Baja Exitosa!", "La Categoria ha sido dado de baja correctamente.", "success");
                        } else {
                            swal("Error", "Ocurrió un error intente mas tarde", "error");
                        }
                    }
                }).done(function () {
                    window.setTimeout(function () {
                        location.reload();
                    }, 600);
                });
            });
        };
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });
        });
    </script>
}